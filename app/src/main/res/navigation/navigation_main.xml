<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_summary">

    <fragment
        android:id="@+id/navigation_summary"
        android:name="com.hul.sportzin.ui.fragment.navFragment.SummaryFragment"
        android:label="@string/title_summary"
        tools:layout="@layout/fragment_summary" />

    <fragment
        android:id="@+id/navigation_scorecard"
        android:name="com.hul.sportzin.ui.fragment.navFragment.ScorecardFragment"
        android:label="@string/title_scorecard"
        tools:layout="@layout/fragment_scorecard" />

    <fragment
        android:id="@+id/navigation_commentary"
        android:name="com.hul.sportzin.ui.fragment.navFragment.CommentaryFragment"
        android:label="@string/title_commentary"
        tools:layout="@layout/fragment_commentary" />

    <fragment
        android:id="@+id/navigation_match_info"
        android:name="com.hul.sportzin.ui.fragment.navFragment.MatchInfoFragment"
        android:label="@string/title_match_info"
        tools:layout="@layout/fragment_commentary" />
</navigation>